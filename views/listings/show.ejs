<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">

    </div>
</div>



  <div class="container mt-4">

<body class="abcd">
    <h3> <%= listing.title %> : </h3>

<div class="card col-6 offset-3">
    <img src="<%- listing.image.url %>" class="card-img-top show-img" alt="<%= listing.image.url %>">
  <div class="card-body">
    <p class="card-text">
       <i><%= listing.owner.username %> </i>
       <br>
        <%= listing.description %> <br>
         &#8377; <%= listing.price %> <br>
         <%= listing.location %> <br>
         <%= listing.country %>

    </p>
  </div>

</div>

  <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
  <div class="row mt-3">

    <div class="col-8 offset-2 d-flex justify-content-between">
      
      <!-- LEFT: Edit -->
      <a 
        href="/listings/<%= listing._id %>/edit" 
        class="btn btn-dark"
        style="width: 120px;"
      >
        Edit
      </a>

      <!-- RIGHT: Delete -->
      <form 
        action="/listings/<%= listing._id %>?_method=DELETE" 
        method="POST"
        class="m-0"
      >
        <button 
          class="btn btn-dark"
          style="width: 120px;"
        >
          Delete
        </button>
      </form>

    </div>
  </div>
<% } %>


  
</body>

  </div>


<hr>

<div class="row mt-4">
  <div class="col-8 offset-2">

    <% if (currentUser) { %>
      <h4 class="mb-3">Leave a Review</h4>

      <form 
        action="/listings/<%= listing._id %>/reviews" 
        method="POST"
      >

        <!-- STAR RATING (ONLY ONE) -->
       <fieldset class="starability-slot">
  <input type="radio" id="first-rate1" name="review[rating]" value="1" required />
  <label for="first-rate1" title="Terrible">1 star</label>

  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>

  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>

  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>

  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>


        <!-- COMMENT (ONLY ONE) -->
        <div class="mb-3 mt-3">
          <textarea
            name="review[comment]"
            class="form-control"
            placeholder="Write your review here..."
            required
          ></textarea>
        </div>

        <!-- SUBMIT (ONLY ONE) -->
        <button class="btn btn-dark">Submit</button>
      </form>
    <% } %>

  </div>
</div>
<hr>

    <h4 class="mb-3">All Reviews</h4>

    <div class="row g-4 col-md-8 ">
      <% for (let review of listing.reviews) { %>

        <div class="col-md-6 ">
          <div class="review-card">
            <h5><%= review.author.username %></h5>
            <p><%= review.comment %></p>
            <p><b>Rating:</b> <%= review.rating %></p>

            <form 
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              method="POST"
            >
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        </div>

      <% } %>
    </div>

  </div>
</div>




</div>
